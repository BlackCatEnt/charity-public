    "tokens:fix:bot": "pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File tools/fix-env.ps1 -Bot -Broadcaster:$false",
    "tokens:fix:broad": "pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File tools/fix-env.ps1 -Bot:$false -Broadcaster",
    "tokens:status": "node tools/token-status.mjs",
    "tokens:clear": "pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -Command \"Remove-Item -EA Ignore data/token_state.json\"",
    "embeddings:test": "node tools/embeddings-test.mjs",
    "es:status": "node tools/eventsub-status.mjs",
    "tokens:refresh": "node tools/token-refresh.mjs",
    "tokens:refresh:bot": "node tools/token-refresh.mjs bot",
    "tokens:refresh:broad": "node tools/token-refresh.mjs broadcaster",
    "simulate": "node tools/simulatechat.mjs",
    "llm:test": "node tools/llm-smoke.mjs",
    "intent:test": "node tools/intent-smoke.mjs",
    "helix:whoami": "node tools/helix-whoami.mjs",
	"discord:dm": "node tools/discord-dm.js"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chokidar": "^3.6.0",
    "discord.js": "^14.22.1",
