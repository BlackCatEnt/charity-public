  "private": true,
  "type": "module",
  "scripts": {
    "start": "node data/index.js",
    "reindex-kb": "node tools/reindex_kb.js ./docs",
    "check": "node relics/path-checker.mjs",
    "smoke": "node tools/smoke.js",
    "mirror:publish": "pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File tools/mirror-update.ps1",
