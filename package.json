{
  "name": "Charity-The-Adventurer",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "imports": {
    "#mind/*": "./mind/*",
    "#heart/*": "./heart/*",
    "#soul/*": "./soul/*",
    "#halls/*": "./halls/*",
    "#rituals/*": "./rituals/*",
    "#codex/*": "./codex/*",
    "#relics/*": "./relics/*",
    "#sentry/*": "./sentry/*",
    "#core/*": "./mind/*",
    "#boot/*": "./boot/*",
    "#adapters/*": "./halls/*",
    "#hive/*": "./hive/*"
  },
  "scripts": {
    "start": "node boot/index.mjs",
    "check": "node relics/path-checker.mjs",
    "fb:snapshot": "node rituals/cli/feedback-snapshot.mjs --window=7d",
    "preflight": "npm run check && node relics/helix-smoke.mjs",
    "mem:backfill": "node rituals/cli/memory-backfill.mjs --days=30",
	"metrics:tail": "node -e \"const fs=require('fs');const f='relics/.runtime/logs/metrics/'+new Date().toISOString().slice(0,7)+'/metrics-'+new Date().toISOString().slice(0,10)+'.jsonl';fs.existsSync(f)&&fs.createReadStream(f,{encoding:'utf8'}).on('data',d=>process.stdout.write(d));\"",
    "scribe:test": "node -e \"fetch(process.env.SCRIBE_TRANSPORT_URL||'http://127.0.0.1:9000/ingest',{method:'POST',headers:{'content-type':'application/json'},body:'{\"ping\":true}'}).then(r=>console.log(r.status)).catch(e=>console.error(e))\""
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "tmi.js": "^1.8.5"
  }
}
