    "openai": "^5.15.0",
    "tmi.js": "^1.8.5",
    "tokenizers": "^0.13.3",
    "tokenizers-win32-x64-msvc": "^0.13.4-rc1",
    "winston": "^3.13.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "axios": "^1.11.0"
  },
  "imports": {
    "#embeddings": "./modular_phase2/modules/embeddings.js"
