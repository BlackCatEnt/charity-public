# === REQUIRED ===
TWITCH_CHANNEL=
TWITCH_BOT_USERNAME=
TWITCH_BROADCASTER=
TWITCH_BROADCASTER_ID=

# Fill these after you mint a fresh token for the BOT account 
# NOTE: No quotes. No spaces. Do NOT include the 'oauth:' prefix here.
TWITCH_OAUTH=
TWITCH_REFRESH=
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# === LOCAL LLM ===
OLLAMA_HOST=http://127.0.0.1:11434
LLM_MODEL=llama3.1:8b-instruct-q8_0
EMBED_MODEL=bge-m3

# === TOKEN AUTO-REFRESH TUNING (good defaults) ===
TOKEN_ALERT_MINUTES=15
TOKEN_CHECK_INTERVAL_MINUTES=10
REFRESH_COOLDOWN_MINUTES=180
MIN_TOKEN_GAIN_MINUTES=20

# === OPTIONAL QUALITY OF LIFE ===
# LOG_LEVEL can be info | warn | error (only used if your logger reads it)
LOG_LEVEL=info
# NODE_ENV=production keeps some libs quieter; safe to set
NODE_ENV=production

# === STARTUP ===
STARTUP_EMOTES=
STARTUP_PING=0