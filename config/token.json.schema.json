{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Charity Token State",
  "type": "object",
  "properties": {
    "access_token": { "type": "string" },
    "refresh_token": { "type": "string" },
    "client_id": { "type": "string" },
    "client_secret": { "type": "string" },
    "expires_at": { "type": "number", "description": "Epoch ms" },
    "last_refresh_attempt": { "type": "number", "description": "Epoch ms" },
    "scopes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "login": { "type": "string" }
  },
  "required": ["refresh_token"],
  "additionalProperties": true
}
